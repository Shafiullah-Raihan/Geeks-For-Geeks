#include <bits/stdc++.h>
using namespace std;


// } Driver Code Ends
//User function template for C++
ðŸ˜Ž
class Solution{
public:	
	int maxSubstring(string S)
	{
	    int n = S.size();
		
		int arr[n];
		for(int i = 0; i < n; i++)
			arr[i] = (S[i] == '0')?1:-1;

		int cur = arr[0], ans = arr[0];

	
		for (int i = 1; i < n; i++) 
	   	{ 
	        cur = max(arr[i], cur + arr[i]); 
	        
	        ans = max(ans, cur); 
	   	} 

	   return ans; 
	}
};
ðŸ˜Ž
//{ Driver Code Starts.

int main() 
{
   	

   	ios_base::sync_with_stdio(0);
    cin.tie(NULL);
    cout.tie(NULL);
   
   	int t;
   	cin >> t;
   	while(t--)
   	{
   		string s;
   		cin >> s;

   	    Solution ob;

   		cout << ob.maxSubstring(s) << "\n";
   	
cout << "~" << "\n";
}

    return 0;
}

