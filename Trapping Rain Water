#include <bits/stdc++.h>

using namespace std;

ðŸ˜Ž
// } Driver Code Ends
class Solution {

    // Function to find the trapped water between the blocks.
  public:
    int trappingWater(vector<int> &arr) {
        int n= arr.size();
        int left = 0;
        int right = n-1;
     
        int l_max = 0;
        int r_max = 0;
     
     
        long long result = 0;
        while (left <= right)
        {
     
       
          if(r_max <= l_max)
          {
     
           
            result += max(0, r_max-arr[right]);
     
            
            r_max = max(r_max, arr[right]);
     
          
            right -= 1;
          }
          else
          { 
     
          
            result += max(0, l_max-arr[left]);
     
         
            l_max = max(l_max, arr[left]);
     
         
            left += 1;
          }
        }
        return result;
    }
};


ðŸ˜Ž


//{ Driver Code Starts.
int main() {
    int t;
    cin >> t;
    cin.ignore();
    while (t--) {
        vector<int> arr;
        string input;

        // Read first array
        getline(cin, input);
        stringstream ss(input);
        int number;
        while (ss >> number) {
            arr.push_back(number);
        }

        Solution ob;
        int res = ob.trappingWater(arr);

        cout << res << endl << "~" << endl;
    }
    return 0;
}

// } Driver Code Ends
